{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
<div id="background-show">
    <div class="container content-box">
        <div id="cadre">
            <div id="carouselShow" class="carousel slide carousel-fade" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item text-center active">
                        <img src="/uploads/images/{{ trick.imageMain }}" class="d-block w-100 h-100 img-fluid" alt="..." >
                        {% if app.user %}
                        <div class="icons-edit icons-imageMain">
                            <a href="{{ path('trick_edit', {'slug': trick.slug}) }}">
                                <img  src="/icons/icons/pencil.svg" width="24px" height="24px" alt="icone de modification" title="Modifier le trick">
                            </a>
                            <a href="{{ path('trick_delete', {'slug': trick.slug}) }}">
                                <img src="/icons/icons/trash.svg" width="24px" height="24px" alt="icone de suppression" title="Supprimer le trick" onclick="confirm(\'Valider votre choix?\')">
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    {% for img in trick.images %}
                    <div class="carousel-item">
                        <img src="/uploads/images/{{ img.filename }}" class="d-block w-100 h-100 img-fluid" alt="..." >
                        {% if app.user %}
                        <div class="icons-edit icons-imageMain">
                            <a href="{{ path('trick_edit', {'slug': trick.slug}) }}" >
                                <img src="/icons/icons/pencil.svg" width="24px" height="24px" alt="icone de modification" title="Modifier le trick">
                            </a>
                            <a href="{{ path('trick_delete', {'slug': trick.slug}) }}">
                                <img src="/icons/icons/trash.svg" width="24px" height="24px" alt="icone de suppression" title="Supprimer le trick" onclick="confirm(\'Valider votre choix?\')">
                            </a>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                    {% for video in trick.videos %}
                        <div class="carousel-item">
                            {{ video.embedHtml | raw }}
                            {% if app.user %}
                            <div class="icons-edit icons-imageMain">
                                <a href="{{ path('trick_edit', {'slug': trick.slug}) }}">
                                    <img  src="/icons/icons/pencil.svg" width="24px" height="24px" alt="icone de modification" title="Modifier le trick">
                                </a>
                                <a href="{{ path('trick_delete', {'slug': trick.slug}) }}">
                                    <img src="/icons/icons/trash.svg" width="24px" height="24px" alt="icone de suppression" title="Supprimer le trick" onclick="confirm(\'Valider votre choix?\')">
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                    <a class="carousel-control-prev my-5" href="#carouselShow" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next my-5" href="#carouselShow" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <h1 class="my-5 text-center">{{ trick.name }}</h1>
            <div class="d-flex justify-content-center my-2">
                <button class="btn btn-primary" type="button" id="switch-medias">Voir les médias</button>
            </div>
            <div id="medias" class="row my-3">
                {% for img in trick.images %}
                    <div class="col-md-3 mb-2">
                        <img src="/uploads/images/{{ img.filename }}" alt="" style="height: 200px; width: 100%; display: block; box-shadow: 5px 5px 5px grey;" />
                    </div>
                {% endfor %}
                {% for video in trick.videos %}
                    <div class="col-md-3 video-import mb-2">
                        {{ video.embedHtml | raw }}
                    </div>
                {% endfor %}
            </div>

            <h3 class="my-4"> Description</h3>
            
            <p>{{ trick.description }}</p>
            
            <div class="row text-center mt-4" style="font-size: 0.8em">
                <div class="col">Créé le : {{ trick.createdAt | date('d/m/Y à H:i') }}</div>
                <div class="col">Catégorie : {{ trick.category.name }}</div>
                {% if trick.modifiedAt %}
                <div class="col">Modifié le : {{ trick.modifiedAt | date('d/m/Y à H:i' )}}</div>
                {% endif %}
            </div>
        </div>

        {% if app.user %}
        <hr class="my-5">
        <div class="comment-form bg-light py-3 px-3">
            {{ form_start(form)}}
            {{ form_widget(form)}}
            <button type="submit" class="btn btn-primary">Poster le commentaire !</button>
            {{ form_end(form)}}
        </div>
        {% endif %}

        <hr class="my-5">

        {# Comments : #}
        <section id="comments">
        {% if trick.comments | length > 0 %}
            <div class="comments-list my-4">
                <h3 class="my-4">Les commentaires :</h3>
                {% for comment in trick.comments | slice(0, 10) %}
                <div class="row justify-content-md-center">
                    <div class="media col-md-8">
                        <img src="/uploads/images/{{ comment.user.avatar }}" class="align-self-center mr-3" alt="Avatar de {{ comment.user.loginName }}" style="width: 64px; height: 64px; border-radius: 50%">
                        <div class="media-body border p-2 my-2">
                            <em class="mt-0"><strong>{{ comment.user.fullName }}</strong> le {{ comment.createdAt | date('d/m/Y à H:i') }} :</em>
                            <blockquote>{{ comment.content }}</blockquote>
                        </div>
                    </div>
                </div>
                {% endfor %}
        {% else %}
            <p class="h5"><em>Pas encore de commentaire !</em></p>
        {% endif %}      
        </section>
       
            <div class="d-flex justify-content-center my-2">
                <button class="btn btn-light" id="more-comments" type="button">
                    Afficher plus de commentaires!
                </button>
            </div>
     
    </div>
</div>

{% endblock %}

{% block javascripts %}
{# display more comments with Ajax #}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script>
    click = 0;
    function moreComments(event) {
        event.preventDefault();
        click++;
        let start = 10 * click;
        const url = "{{ path('more_comments', {'slug': trick.slug} )}}/" + start;
        axios.get(url).then(function (response) {
            $("#comments").append(response.data);
        }).catch(function (error) {
            if (response.status === 403) {
                window.alert("Vous n'êtes pas autorisé à effectuer cette action !");
            }
            else if (response.status === 404) {
                window.alert("La page appelé n'existe pas");
            }
            else {
                window.alert("Une erreur est survenue !");
            }
        });
    }
    document.getElementById("more-comments").addEventListener("click", moreComments);
</script>

{# Hide medias in mobile devices #}
<script>
$(function() {
    $("#switch-medias").click(function() {
        $("#medias").toggle();
    });
});
</script>
{# navigation: scroll button #}

{% endblock %}

