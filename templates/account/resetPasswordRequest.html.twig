{% extends 'base.html.twig' %}
{% block title %}Réinitialiser le mot de passe{% endblock %}
{% block body %}
<div id="background-show">
    <div class="container">
        <div class="row justify-content-center py-4">
            <div class="col-md-9 col-lg-6">
                <div class="bg-light p-4 content-box">
                    <h1 class="h3 mb-3">Réinitialiser le mot de passe</h1>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="text-center">
                        <button type="submit" class="btn btn-success">Demander la réinitialisation !</button>
                    </div>
                    {{ form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}