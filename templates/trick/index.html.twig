{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Homepage - Snowboard tricks list{% endblock %}

{% block body %}
<div class="jumbotron jumbotron-home text-center vertical-center">
    <h1 class="display-3">SnowTricks !</h1>
    <p class="lead light" style="color: white">Le site de référence sur les figures de snowboard.</p>
</div>

<div class="container">
    <h1>Liste des tricks !</h1>
    <p>Il y a actuellement {{ tricks | length}} tricks dans la base de données!</p>

    <div class="row">
        {% for trick in tricks %}
        <div class="col-lg-3">
            <div class="card bg-light mb-3">
                <a href="{{ path('trick_show' , {'slug': trick.slug}) }}">
                    <img src="{{ trick.imageMain }}" alt="Image du trick {{ trick.name }}" style="height: 200px; width: 100%; display: block">
                </a>
                <div class="card-body">
                    <div class="row">
                        <a href="{{ path('trick_show' , {'slug': trick.slug}) }}">
                            <h5 class="card-title">{{ trick.name }}</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
