{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
<div id="background-show">
    <div class="container">
        <div id="cadre">
            <div class="jumbotron jumbotron-show text-center d-flex align-items-center justify-content-center" style="background-image: url('../images/snow-default.jpg')">
                <h1 class="text-center">{{ trick.name }}</h1>
            </div>

            <div class="row my-4">
            {% for img in trick.images %}
                <img class="col-md-2" src="{{ img.filename }}" alt="" style="height: 200px; width: 100%; display: block">
            {% endfor %}
            </div>

            <h2> Description</h2>
            <p>{{ trick.description | raw }}</p>
            
            <div class="row text-center">
                <div class="col"><strong>Créé le : {{ trick.createdAt | date('d/m/Y à H:i') }}</strong></div>
                <div class="col"><strong>Catégorie : {{ trick.category.name }}</strong></div>
                {% if trick.modifiedAt %}
                <div class="col"><strong>Modifié le : {{ trick.modifiedAt | date('d/m/Y à H:i' )}}</strong></div>
                {% endif %}
            </div>
        </div>

        <hr />

